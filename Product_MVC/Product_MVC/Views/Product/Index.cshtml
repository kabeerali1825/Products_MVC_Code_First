@using Product_MVC.Models.Domains
@model List<Product>

@{
    ViewData["Title"] = "List of Products";
}

<h2 class="text-center mb-5">List of Products</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">New Product</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Brand</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Image File Name</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@i + 1</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Brand</td>
                <td>@Model[i].Category</td>
                <td>@Model[i].Price.ToString("C")</td>
                <td>@Model[i].Description</td>
                <td><img src="~/Products/@Model[i].ImageFileName" width="100" /></td>
                <td>@Model[i].CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Product" asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a>
                    <form asp-controller="Product" asp-action="DeleteConfirmed" asp-route-id="@Model[i].Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
